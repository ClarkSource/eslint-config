{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "removeComments": true
  },
  "buildOptions": {
    "incremental": true
  },

  // Mirrors `pnpm-workspace.yaml`.
  "references": [
    { "path": "./eslint/*/*/" },
    { "path": "./prettier/*/" },
    { "path": "./tools/*/" },
  ]
}

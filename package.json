{
  "name": "root",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git@github.com:ClarkSource/eslint-config.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "if [ \"$npm_config_user_agent\" = \"${npm_config_user_agent#*\"pnpm/\"}\" -a -x \"$(command -v npx)\" ]; then npx --quiet only-allow pnpm; fi",
    "clean": "pnpm recursive exec rm -rf ./node_modules",
    "lint:js": "eslint --ext ts,js .",
    "lint:types": "yarn workspaces run lint:types",
    "lint:rules": "yarn workspaces run lint:rules",
    "test": "yarn workspaces run test"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^0.4.3",
    "eslint": "^7.32.0",
    "typescript": "^4.3.5"
  },
  "engines": {
    "node": "^10.0 || ^12.0 || ^13.0 || >=14.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "prettier": "@clark/prettier-config",
  "volta": {
    "node": "14.17.4"
  }
}
